<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6B89D1"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/txt_app_name"
        android:textSize="50sp"
        android:textStyle="bold" android:textColor="#FFFFFF"/>

    <RelativeLayout
        android:id="@+id/layout_splash_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_splash_login"
            style="@style/btn_med_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Login" android:layout_centerHorizontal="true" android:layout_alignLeft="@+id/btn_splash_quick_capture" android:layout_alignRight="@+id/btn_splash_quick_capture"/>

        <Button
            android:id="@+id/btn_splash_sign_up"
            style="@style/btn_med_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_orange"
            android:text="@string/txt_sign_up" android:layout_centerInParent="true" android:layout_below="@+id/btn_splash_login" android:layout_marginTop="20dp" android:layout_alignRight="@+id/btn_splash_quick_capture" android:layout_alignLeft="@+id/btn_splash_quick_capture"/>

        <Button
            android:id="@+id/btn_splash_quick_capture"
            style="@style/btn_med_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_orange"
            android:text="Quick Capture" android:layout_centerHorizontal="true" android:layout_below="@+id/btn_splash_sign_up"/>
    </RelativeLayout>

</LinearLayout>